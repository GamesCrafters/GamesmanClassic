#!/bin/sh
# Automated gamesman solver
# John Jordan


if test "$1" = "all"
then
	options="--solve all"
elif test "$1" = "analyze"
then
	options="--solve all --analyze"
else
	options="--solve"
fi

CWD=`dirname $0`
MODULES=`ls -1 $CWD/m* 2>/dev/null`

if test "$MODULES" = ""
then
	echo "Build gamesman first!"
	exit 1
fi

for i in $MODULES
do
	$i $options 1>/dev/null
done

echo "Finished solving.. Thanks for your patience!"
